{
  "compilerOptions": {
	"outDir": "dist",
    "sourceMap": true,
	"inlineSources": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "lib": [
      "dom",
      "es5"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
	"typeRoots": ["node_modules/@types"],
	"baseUrl": "./"
  },
	"exclude": [
		"**/*.spec.ts"
	]
}